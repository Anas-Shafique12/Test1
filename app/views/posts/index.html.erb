<p style="color: green"><%= notice %></p>

<% content_for :title, "Posts" %>

<h1>Posts</h1>
<%= link_to "New post", new_post_path %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= render post %></td>
        <td><%= link_to post.status, toggle_status_post_path(post) %></td>
        <td>
          <% if can? :read, post %>
            <%= link_to "Show this post", post %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @posts %>
